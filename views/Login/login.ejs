<%- include ("../static/header.ejs") %>
    <div class="row h-100 justify-content-center align-items-center">
        <form action="/login" method="post">
            <div class="form-group">
            <input type="text" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <input type="hidden" id="csrf" name="_csrf" value="<%= csrftoken %>" />
        </form>
    </div>
<%- include ("../static/footer.ejs") %>